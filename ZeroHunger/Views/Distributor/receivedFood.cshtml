
@{
    ViewBag.Title = "receivedFood";
}
<a href="/Distributor/Index" class="btn btn-secondary">Back</a>
<br />
<br />
<h2>Received Food</h2>
<hr />
@if (Model != null && Model.Count > 0)
{
    foreach (var foodCollectRequest in Model)
    {
        foreach (var processing in foodCollectRequest.Processings)
        {
            <div>
                <table class="table table-bordered">
                    <thead class="table-success">
                        <tr>
                            <th>Request ID</th>
                            <th>Packaging Type</th>
                            <th>Number of Packages</th>
                            <th>Food Description</th>
                            <th>Status Type</th>
                            <th>Distribute Area</th>
                            <th>Decision</th>
                        </tr>
                    </thead>
                    <tr>
                        <td>@foodCollectRequest.id</td>
                        <td>@foodCollectRequest.packagingType</td>
                        <td>@foodCollectRequest.numberofPackages</td>
                        <td>@foodCollectRequest.foodDescription</td>
                        <td>@foodCollectRequest.statusType</td>
                        <td>@processing.area</td>
                        <td><a href="/Distributor/collectFood/@foodCollectRequest.id" class="btn btn-info">Collect</a></td>
                    </tr>
                </table>
            </div>
        }
    }
}
else
{
    <span class="text-danger">Food Not Available this Time</span>
}

