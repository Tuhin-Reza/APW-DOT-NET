@model List<ZeroHunger.DTOS.FoodCollectRequestDTO>

@{
    ViewBag.Title = "Index";
}

<h2>Welcome, @ViewBag.contactPersonName</h2>

<a href="/Restaurant/CreateFoodCollectRequest" class="btn btn-outline-primary btn-rounded" data-mdb-ripple-color="dark">Collect Food Request</a>
<main>
    <h6>Food Collect Requests</h6>
    @if (Model != null && Model.Count > 0)
    {
        <table  class="table table-bordered">
            <tr>
                <th>ID</th>
                <th>Food Type</th>
                <th>Packaging Type</th>
                <th>Number of Packages</th>
                <th>Food Description</th>
                <th>Available Date</th>
                <th>Preferred Collect Time</th>
                <th>Expiry Date</th>
                <th>Pick-up Location</th>
                <th>Status Type</th>
                <th>Restaurant ID</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.foodType</td>
                    <td>@item.packagingType</td>
                    <td>@item.numberofPackages</td>
                    <td>@item.foodDescription</td>
                    <td>@item.availableDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.preferredCollectTime.ToString("h:mm tt")</td>
                    <td>@item.expiryDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.pickUpLocation</td>
                    <td>@item.statusType</td>
                    <td>@item.retaurantID</td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No food collect requests available.</p>
    }
</main>