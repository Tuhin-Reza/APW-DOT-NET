
@{
    ViewBag.Title = "assignArea";
}

<h2>AssignArea</h2>

<a href="/Admin/Index" class="btn btn-secondary">Back</a>
<br />
<br />
<form action="/Admin/assignArea" method="post">
    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Request ID</th>
                    <th>Food Type</th>
                    <th>Number of Packages</th>
                    <th>Food Description</th>
                    <th>Pick-up Location</th>
                    <th>Assign Area</th>
                    <th>Submit</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.foodType</td>
                    <td>@item.numberofPackages</td>
                    <td>@item.foodDescription</td>
                    <td>@item.pickUpLocation</td>
                    <td>
                        <input type="hidden" name="id" value="@item.id">
                        <div class="form-group">
                            <select class="form-control" id="area" name="area">
                                <option value="" disabled selected>---Select Area---</option>
                                <option value="area1">Area 1</option>
                                <option value="area2">Area 2</option>
                                <option value="area3">Area 3</option>
                                <option value="area4">Area 4</option>
                                <option value="area5">Area 5</option>
                            </select>
                            <span class="text-danger">@Html.ValidationMessage("area")</span><br />
                        </div>
                        @*<a href="@Url.Action("requestSpecificDecission", "Admin", new { restaurant_id = item.retaurantID, fcr_id = item.id })" class="btn btn-secondary">Details</a>*@
                    </td>
                    <td>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No food collect requests available.</p>
    }

</form>