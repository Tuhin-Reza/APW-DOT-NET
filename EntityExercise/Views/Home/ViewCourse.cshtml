
@{
    ViewBag.Title = "ViewCourse";
}

<h2>ViewCourse</h2>
<h5>
    <a href="/Home/CreateCourse">Add Course</a>
</h5><br />

     <form action="/Home/SearchCourse" method="post">
         <input type="text" name="search" value="" />
         <input type="submit" value="Search By Course" /><br /><br />
         <table class="table table-bordered">
             <thead>
                 <tr>
                     <th>Id</th>
                     <th>C_Name</th>
                     <th>Operation</th>
                 </tr>
             </thead>
             <tbody>
                 @if (Model != null)
                 {
                     foreach (var item in Model)
                     {
                         <tr>
                             <td>@item.id</td>
                             <td>@item.c_name</td>
                             <td>
                                 <a class="btn btn-primary" href="/Home/EditCourse/@item.id">Edit</a>
                                 <a class="btn btn-primary" href="/Home/DeleteCourse/@item.id">Delete</a>
                             </td>
                         </tr>
                     }

                 }

             </tbody>
         </table>
     </form><br />


