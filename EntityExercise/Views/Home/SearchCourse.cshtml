
@{
    ViewBag.Title = "SearchCourse";
}

<h2>SearchCourse</h2>
<h5>
    <a href="/Home/ViewCourse">Refresh</a>
</h5>
<br />


<table class="table table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>C_Name</th>
            <th>Operation</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.id</td>
                    <td>@item.c_name</td>
                    <td>
                        <a class="btn btn-primary" href="/Home/EditCourse/@item.id">Edit</a>
                        <a class="btn btn-primary" href="/Home/DeleteCourse/@item.id">Delete</a>
                    </td>
                </tr>
            }
        }

    </tbody>
</table>
<br />
